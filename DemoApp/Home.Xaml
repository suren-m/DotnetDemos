<Page x:Class="DemoApp.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="10" />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />            
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="60"/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock  
            Margin="10"
            Name="StatusBlock"
            Text="Demos"  
            FontSize="24"
            Foreground="AliceBlue"
            Grid.Row="0"                                         
            Grid.ColumnSpan="4"
            Grid.Column="0">            
        </TextBlock>

        <Button Name="DeadlockBtn" 
                Grid.Row="1"
                Grid.Column="1"     
                FontSize="24"
                Content="Deadlock" 
                Click="DeadlockBtn_Click"></Button>
        
        <Button Name="WebAPIDemoAsyncBtn" 
                Grid.Row="1"
                Grid.Column="2"
                FontSize="24"
                Content="Web API Demo Async" 
                Click="WebAPIDemoAsyncBtn_Click"></Button>

        <Button Name="RunTaskBtn" 
                Grid.Row="1"
                Grid.Column="3"     
                FontSize="24"
                Content="Run Task" Click="RunTaskBtn_Click" 
                ></Button>

        <Button Name="StartNewTaskBtn" 
                Grid.Row="2"
                Grid.Column="1"     
                FontSize="24"
                Content="Start New Task" Click="StartNewTaskBtn_Click" 
                ></Button>

        <Button Name="WebAPIDemoAsyncCombinatorsBtn" 
                Grid.Row="2"
                Grid.Column="2"     
                FontSize="24"
                Content="Web API Demo Async Combinators" Click="WebAPIDemoAsyncCombinatorsBtn_Click" 
                ></Button>

        <Button Name="YieldDemoBtn" 
                Grid.Row="2"
                Grid.Column="3"     
                FontSize="24"
                Content="Yield Demo" Click="YieldDemoBtn_Click"  
                ></Button>

        <Button Name="CancellationDemoBtn" 
                Grid.Row="3"
                Grid.Column="1"     
                FontSize="24"
                Content="Cancellation Demo" Click="CancellationDemoBtn_Click"   
                ></Button>

        <Button Name="VoidExceptionDemo" 
                Grid.Row="3"
                Grid.Column="2"     
                FontSize="24"
                Content="Void Exception Demo" Click="VoidExceptionDemo_Click" 
                ></Button>

        <Button Name="ParentAttachDemoBtn" 
                Grid.Row="3"
                Grid.Column="3"     
                FontSize="24"
                Content="Parent Attach Demo" Click="ParentAttachDemoBtn_Click"  
                ></Button>

        <Button Name="PipelineDemoBtn" 
                Grid.Row="4"
                Grid.Column="1"     
                FontSize="24"
                Content="Pipeline Demo" Click="PipelineDemoBtn_Click"  
                ></Button>

        <Button Name="IAsyncEnumerable" 
                Grid.Row="4"
                Grid.Column="3"     
                FontSize="24"
                Content="IAsync Enumerable" Click="IAsyncEnumerable_Click" 
                >
        </Button>


    </Grid>

 
    
</Page>
